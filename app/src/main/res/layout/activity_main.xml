<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="40sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/title_btn_background"
        android:padding="4dp"
        android:text="@string/main_view_name"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/findTaxOfficeBtn"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="200dp"
                android:background="@drawable/btn_background"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="25sp"
                android:text="@string/find_tax_office"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/taxOfficeIntroBtn"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="200dp"
                android:background="@drawable/btn_background"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="25sp"
                android:text="@string/tax_office_task"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/findGuOfficeBtn"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="200dp"
                android:background="@drawable/btn_background"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="25sp"
                android:text="@string/find_gu_office"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/guOfficeIntroBtn"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="200dp"
                android:background="@drawable/btn_background"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="25sp"
                android:text="@string/gu_office_task"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>